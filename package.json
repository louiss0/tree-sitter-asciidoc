{
  "name": "tree-sitter-asciidoc",
  "version": "0.1.0",
  "description": "This is my parser for Asciidoc",
  "repository": "https://github.com/louiss0/tree-sitter-asciidoc",
  "license": "MIT",
  "author": {
    "name": "Shelton Louis",
    "email": "louisshelton0@gmail.com"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "asciidoc"
  ],
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.3.1",
    "node-gyp-build": "^4.8.4"
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "tree-sitter": "0.22.4",
    "tree-sitter-cli": "^0.25.9"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "tree-sitter test",
    "test:node": "node --test bindings/node/*_test.js",
    "ts:gen": "tree-sitter generate",
    "ts:test": "tree-sitter test",
    "ts:test:v": "tree-sitter test",
    "ts:parse": "tree-sitter parse --stat",
    "build:ts": "tree-sitter generate && tree-sitter build",
    "normalize:lists": "node scripts/normalize_lists.js",
    "normalize:lists:file": "node scripts/normalize_lists.js tmp.adoc",
    "normalize:lists:cli": "node scripts/normalize_lists_cli.js",
    "normalize:lists:cli:file": "node scripts/normalize_lists_cli.js tmp.adoc",
    "normalize:lists:json": "node scripts/normalize_lists_to_json.js",
    "normalize:lists:json:file": "node scripts/normalize_lists_to_json.js tmp.adoc",
    "test:highlights": "pnpm run build:ts && bash test/highlight/tools/run.sh",
    "test:highlights:update": "pnpm run build:ts && bash test/highlight/tools/run.sh --update",
    "test:highlights:win": "pnpm run build:ts && powershell -ExecutionPolicy Bypass -File test/highlight/tools/run.ps1",
    "test:highlights:update:win": "pnpm run build:ts && Remove-Item test/highlight/expected/*.captures -Force; pnpm run test:highlights:win"
  }
}
